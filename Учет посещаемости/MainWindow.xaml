<Window x:Class="Учет_посещаемости.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Учет_посещаемости"
        mc:Ignorable="d"
        Title="Окно авторизации" Height="350" Width="500" ResizeMode="NoResize" SizeToContent="Manual">
    <Window.Background>
        <ImageBrush ImageSource="фон.jpg"/>
    </Window.Background>
    <Grid>
        <Label Content="Авторизация" HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Top" FontSize="36" FontWeight="Bold"/>
        <TextBox x:Name="Log" HorizontalAlignment="Center" Margin="0,112,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="392" FontSize="20" Opacity="0.5" Height="33"/>
        <PasswordBox x:Name="Passw" HorizontalAlignment="Center" VerticalAlignment="Top" Height="33" Opacity="0.5" Width="392" Margin="0,159,0,0" FontSize="20"/>
        <Button x:Name="Auth" Content="Вход" HorizontalAlignment="Center" Margin="0,209,0,0" VerticalAlignment="Top" Height="61" Width="228" FontSize="36" Opacity="0.5" Background="#FFFFFFFF" FontWeight="Bold" Click="Auth_Click"/>

    </Grid>
</Window>
